generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  firstName String
  lastName  String
  username  String
  password  String
  websites  Website[]
}

model Website {
  id        String        @id @default(uuid())
  url       String
  userId    String
  regionId  String
  timeAdded DateTime      @default(now())
  ticks     WebsiteTick[]
  regions   Region[]
  user      User          @relation(fields: [userId], references: [id])
}

model Region {
  id         String        @id @default(uuid())
  name       String
  website_id String
  website    Website       @relation(fields: [website_id], references: [id])
  ticks      WebsiteTick[]
}

model WebsiteTick {
  id               String        @id @default(uuid())
  response_time_ms Int
  status           WebSiteStatus
  region_id        String
  website_id       String
  region           Region        @relation(fields: [region_id], references: [id])
  website          Website       @relation(fields: [website_id], references: [id])
  createdAt        DateTime      @default(now())
}

enum WebSiteStatus {
  Up
  Down
  Unknown
}
